@{
    ViewData["Title"] = "Dashbard v.2";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Accounts</h5>
                    <div class="ibox-tools">
                        <div class="btn-group">
                            <button type="button" class="btn btn-xs btn-white active">Lookout Checking</button>
                            <button type="button" class="btn btn-xs btn-white">Lookout Market</button>
                            <button type="button" class="btn btn-xs btn-white">Discover Savings</button>
                            <button type="button" class="btn btn-xs btn-white">Fidelity Health</button>                            
