@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib/flot/jquery.flot.js"></script>
        <script src="~/lib/flot/jquery.flot.tooltip.min.js"></script>
        <script src="~/lib/flot/jquery.flot.resize.js"></script>
        <script src="~/lib/flot/jquery.flot.pie.js"></script>
        <script src="~/lib/flot/jquery.flot.time.js"></script>
        <script src="~/lib/flot/jquery.flot.spline.js"></script>
        <script src="~/lib/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
        <script src="~/lib/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    </environment>
    <script type="text/javascript">
        $(document).ready(function () {
            function gd(year, month, day) {
                return new Date(year, month - 1, day).getTime();
            }

            var calories = [];
            var carbs = [];
            var fats = [];
            var lbs = [];

            @foreach (var item in Model)
            {
                <text>
                    var date = new Date('@item.SnapshotDateUTC.ToString("yyyy-MM-ddTHH:mm:ssZ")');
                    var timestamp = gd(date.getFullYear(), date.getMonth() + 1, date.getDate());
                    calories.push([timestamp, @item.Calories]);
                    carbs.push([timestamp, @item.CarbGrams]);
                    fats.push([timestamp, @item.FatGrams]);
                    lbs.push([timestamp, @item.Weight]);
                </text>
            }

            var caloriesOptions = {
                xaxis: {
                    mode: "time",
                    tickSize: [3, "day"],
                    tickLength: 0,
                    axisLabel: "Date",
                    axisLabelUseCanvas: true,
                    axisLabelFontSizePixels: 12,
                    axisLabelFontFamily: 'Arial',
                    axisLabelPadding: 10,
                    color: "#d5d5d5"
                },
                yaxes: [{
                    position: "left",
                    max: 3000,
                    color: "#d5d5d5",
                    axisLabelUseCanvas: true,
                    axisLabelFontSizePixels: 12,
                    axisLabelFontFamily: 'Arial',
                    axisLabelPadding: 3
                }, {
                    position: "right",
                    max: 500,                    
                    color: "#d5d5d5",
                    axisLabelUseCanvas: true,
                    axisLabelFontSizePixels: 12,
                    axisLabelFontFamily: 'Arial',
                    axisLabelPadding: 67
                }],
                legend: {
                    noColumns: 1,
                    labelBoxBorderColor: "#000000",
                    position: "nw"
                },
                grid: {
                    hoverable: false,
                    borderWidth: 0
                }
            };

            var carbsOptions = {
                xaxis: {
                    mode: "time",
                    tickSize: [3, "day"],
                    tickLength: 0,
                    axisLabel: "Date",
                    axisLabelUseCanvas: true,
                    axisLabelFontSizePixels: 12,
                    axisLabelFontFamily: 'Arial',
                    axisLabelPadding: 10,
                    color: "#d5d5d5"
                },
                yaxes: [{
                    position: "left",
                    max: 500,
                    color: "#d5d5d5",
                    axisLabelUseCanvas: true,
                    axisLabelFontSizePixels: 12,
                    axisLabelFontFamily: 'Arial',
                    axisLabelPadding: 3
                }, {
                    position: "right",
                    max: 100,                    
                    color: "#d5d5d5",
                    axisLabelUseCanvas: true,
                    axisLabelFontSizePixels: 12,
                    axisLabelFontFamily: 'Arial',
                    axisLabelPadding: 67
                }],
                legend: {
                    noColumns: 1,
                    labelBoxBorderColor: "#000000",
                    position: "nw"
                },
                grid: {
                    hoverable: false,
                    borderWidth: 0
                }
            };

            var fatsOptions = {
                xaxis: {
                    mode: "time",
                    tickSize: [3, "day"],
                    tickLength: 0,
                    axisLabel: "Date",
                    axisLabelUseCanvas: true,
                    axisLabelFontSizePixels: 12,
                    axisLabelFontFamily: 'Arial',
                    axisLabelPadding: 10,
                    color: "#d5d5d5"
                },
                yaxes: [{
                    position: "left",
                    max: 200,
                    color: "#d5d5d5",
                    axisLabelUseCanvas: true,
                    axisLabelFontSizePixels: 12,
                    axisLabelFontFamily: 'Arial',
                    axisLabelPadding: 3
                }, {
                    position: "right",
                    max: 100,                    
                    color: "#d5d5d5",
                    axisLabelUseCanvas: true,
                    axisLabelFontSizePixels: 12,
                    axisLabelFontFamily: 'Arial',
                    axisLabelPadding: 67
                }],
                legend: {
                    noColumns: 1,
                    labelBoxBorderColor: "#000000",
                    position: "nw"
                },
                grid: {
                    hoverable: false,
                    borderWidth: 0
                }
            };

            var dataset = [
                {
                    label: "Number of Calories",
                    data: calories,
                    color: "#1ab394",
                    bars: {
                        show: true,
                        align: "center",
                        barWidth: 24 * 60 * 60 * 600,
                        lineWidth: 0
                    }
                }, {
                    label: "Weight",
                    data: lbs,
                    yaxis: 2,
                    color: "#464f88",
                    lines: {
                        lineWidth: 1,
                        show: true,
                        fill: true,
                        fillColor: {
                            colors: [{
                                opacity: 0.2
                            }, {
                                opacity: 0.2
                            }]
                        }
                    },
                    splines: {
                        show: false,
                        tension: 0.6,
                        lineWidth: 1,
                        fill: 0.1
                    }
                }
            ];

            function plotData(data, options) {
                dataset[0].data = data;
                $.plot($("#flot-dashboard-chart"), dataset, options);
            }

            $("#calories-btn").click(function () {
                dataset[0].label = "Number of Calories";
                plotData(calories, caloriesOptions);
                $("#calories-btn").addClass("active");
                $("#carbs-btn").removeClass("active");
                $("#fat-btn").removeClass("active");
            });

            $("#carbs-btn").click(function () {
                dataset[0].label = "Number of Carbs";
                plotData(carbs, carbsOptions);
                $("#carbs-btn").addClass("active");
                $("#calories-btn").removeClass("active");
                $("#fat-btn").removeClass("active");
            });

            $("#fat-btn").click(function () {
                dataset[0].label = "Number of Fat";
                plotData(fats, fatsOptions);
                $("#fat-btn").addClass("active");
                $("#calories-btn").removeClass("active");
                $("#carbs-btn").removeClass("active");
            });

            plotData(calories, caloriesOptions); // Plot the default data (Calories)
        });
    </script>
}
